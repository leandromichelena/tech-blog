<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title" class="form-label">Title</label>
      <input name="post-title" class="form-control" type="text" value="{{post.title}}" />
      <br/>
      <label for="content" class="form-label">Title</label>
      <textarea class="form-control" id="content">{{post.contents}}</textarea>
    </div>
    <div>
      Created by you on {{format_date post.created_at}}
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button class="btn btn-primary" type="submit">Save post</button>
    <button class="btn btn-primary" type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<br>

<form class="comment-form">
  <div>
    <label for="comment-body" class="form-label">Add a comment</label>
    <textarea class="form-control col-6" name="comment-body"></textarea>
  </div>

  <div>
    <button class="btn btn-primary" type="submit">Add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comment.js"></script>